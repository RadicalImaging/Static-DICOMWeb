{
  "name": "static-dicomweb",
  "private": true,
  "engines": {
    "node": ">=14.18.1",
    "npm": ">=6.14.15",
    "yarn": ">=1.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "lerna": "^8.1.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "canvas": "2.11.1",
    "typescript": "5.6.3"
  },
  "resolutions": {
    "@cornerstonejs/codec-openjph": ">=2.4.5",
    "canvas": "^2.11.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docker:build": "docker build . -t braveheartsoftware/static-dicomweb:1.5.0",
    "docker:run": "docker run --mount type=bind,source=/c/dicomweb,target=/dicomweb --mount type=bind,source=/c/dicom,target=/dicom -d -p 25080:5000 braveheartsoftware/static-dicomweb:1.5.0 dicomwebserver",
    "test": "lerna run test --parallel --stream",
    "test:ci": "yarn run test",
    "build": "lerna run build --stream",
    "build:esm": "lerna run build:esm --stream",
    "build:ci": "yarn run build",
    "link:exec": "lerna run link:exec --stream",
    "lint": "lerna run lint --parallel --stream",
    "lint:ci": "yarn run lint",
    "lint:fix": "lerna run lint:fix --parallel --stream",
    "postinstallManual": "git config core.hooksPath '.husky' && echo 'git hooks configured'",
    "publish": "echo Use yarn publishJS --new-version VERSION --otp XXXXXX",
    "publishJS": "lerna run publishJS --",
    "pack:js": "lerna run pack:js --",
    "reset:hooks": "git config core.hooksPath '.git' && echo 'git hooks was reset'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,js,jsx,tsx,json,md,css}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
