{
  "version": "1.5.0",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.yml", "*.spec.js", "*.test.js"],
      "message": "chore(release): publish",
      "verifyAccess": false
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false
}
