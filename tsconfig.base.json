{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "checkJs": false,

    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    // wish we could turn this on
    "strictNullChecks": false,

    "baseUrl": "./",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "removeComments": true,

    //
    "module": "node18",
    "declaration": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"]
  },
  "exclude": [
    // "node_modules",
    "dist",
    "packages/**/dist",
    "snippets",
    "examples"
  ]
}
